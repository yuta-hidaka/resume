---
import Layout from '../../layouts/Layout.astro';
import HistoryCard from '../../components/HistoryCard.astro';
import { getData } from '../../data/about.ja';

const data = getData('en');
---

<Layout title="Career - Yuta Hidaka">
  <div class="space-y-8">
    <!-- Page Header -->
    <header class="glass-card p-8 text-center">
      <h1 class="text-3xl md:text-4xl font-bold text-[var(--text-primary)] mb-2">
        Career
      </h1>
      <p class="text-[var(--text-muted)]">
        Professional Experience & Work History
      </p>
    </header>
    
    <!-- Timeline -->
    <section class="relative">
      {data.experience && data.experience.map((exp, i) => (
        <HistoryCard
          company={exp.company}
          startDate={exp.startDate}
          endDate={exp.endDate}
          jobTitle={exp.jobTitle}
          job={exp.projects.job}
          jobDescription={exp.projects.jobDescription}
          tags={exp.projects.tags || []}
          index={i}
          locale="en"
        />
      ))}
    </section>
  </div>
</Layout>
