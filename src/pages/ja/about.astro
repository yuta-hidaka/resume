---
import Layout from '../../layouts/Layout.astro';
import { getData } from '../../data/about.ja';

const data = getData('ja');
---

<Layout title="アバウト - 日髙悠太">
  <div class="space-y-10">
    <!-- Page Header -->
    <header class="glass-card p-10 text-center animate-fade-in">
      <h1 class="text-4xl md:text-5xl font-extrabold text-[var(--text-primary)] mb-3 tracking-tight">
        About
      </h1>
      <p class="text-[var(--text-muted)] text-lg">
        スキル・学歴・モチベーション
      </p>
    </header>
    
    <!-- Education -->
    <section class="glass-card p-8 md:p-10 animate-fade-in delay-100">
      <h2 class="section-title">Education</h2>
      <div class="space-y-6">
        {data.education && data.education.map((edu) => (
          <div class="relative pl-8 py-5 border-l-2 border-[var(--accent)] group">
            <div class="absolute left-0 top-6 w-3 h-3 rounded-full bg-[var(--accent)] -translate-x-1/2 shadow-lg shadow-[var(--glow-color)]"></div>
            <div class="flex flex-wrap items-center gap-2 text-sm text-[var(--text-muted)] font-mono mb-3 px-3 py-1.5 rounded-lg bg-[var(--glass-bg)] border border-[var(--glass-border)] w-fit">
              <span>{edu.startDate}</span>
              <span class="text-[var(--accent)]">→</span>
              <span>{edu.endDate}</span>
            </div>
            <h3 class="text-2xl font-bold text-[var(--text-primary)] mb-2">
              {edu.institution}
            </h3>
            <p class="text-[var(--accent)] text-lg font-semibold mb-4">{edu.degree}</p>
            <p class="text-[var(--text-secondary)] leading-relaxed text-base">
              {edu.description}
            </p>
          </div>
        ))}
      </div>
    </section>
    
    <!-- Motivation -->
    <section class="glass-card p-8 md:p-10 animate-fade-in delay-200">
      <h2 class="section-title">Motivation</h2>
      <div class="grid gap-6">
        {data.motivation && data.motivation.map((item, i) => (
          <div class="group p-6 rounded-xl bg-[var(--glass-bg)] border border-[var(--glass-border)] hover:border-[var(--accent)] transition-all duration-300 hover:shadow-lg hover:shadow-[var(--glow-color)]">
            <h3 class="text-xl font-bold text-[var(--accent)] mb-3 flex items-center gap-3">
              <span class="text-[var(--text-muted)] font-mono text-lg">0{i + 1}.</span>
              {item.title}
            </h3>
            <p class="text-[var(--text-secondary)] leading-relaxed text-base">
              {item.desc}
            </p>
          </div>
        ))}
      </div>
    </section>
    
    <!-- Projects -->
    <section class="glass-card p-8 md:p-10 animate-fade-in delay-300">
      <h2 class="section-title">Personal Projects</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {data.selfProject && data.selfProject.map((project) => (
          <a 
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class="group p-6 rounded-xl bg-[var(--glass-bg)] border border-[var(--glass-border)] hover:border-[var(--accent)] transition-all duration-300 block hover:shadow-lg hover:shadow-[var(--glow-color)]"
          >
            <h3 class="text-xl font-bold text-[var(--text-primary)] group-hover:text-[var(--accent)] transition-colors mb-3 flex items-center gap-2">
              {project.title}
              <span class="text-sm opacity-0 group-hover:opacity-100 transition-opacity transform group-hover:translate-x-1">↗</span>
            </h3>
            <p class="text-sm text-[var(--text-muted)] line-clamp-2 leading-relaxed">
              {project.desc}
            </p>
          </a>
        ))}
      </div>
    </section>
    
    <!-- Language Skills -->
    <section class="glass-card p-8 md:p-10 animate-fade-in delay-400">
      <h2 class="section-title">Languages</h2>
      <div class="flex flex-wrap gap-3">
        {data.skills?.LanguageSkills.map((skill) => (
          <div class="tag">
            <span class="font-semibold">{skill.name}</span>
            <span class="mx-2 text-[var(--glass-border)]">|</span>
            <span class="text-[var(--text-muted)]">{skill.description}</span>
          </div>
        ))}
      </div>
    </section>
    
    <!-- Programming Skills -->
    <section class="glass-card p-8 md:p-10 animate-fade-in delay-500">
      <h2 class="section-title">Technical Skills</h2>
      <div class="flex flex-wrap gap-3">
        {data.skills?.ProgrammingSkills.map((skill) => (
          <div class="tag group cursor-default">
            <span class="font-semibold text-[var(--text-primary)]">{skill.name}</span>
            {skill.description && (
              <>
                <span class="mx-1.5 text-[var(--glass-border)]">·</span>
                <span class="text-[var(--text-muted)] text-xs">{skill.description}</span>
              </>
            )}
            <span class="ml-2 text-xs text-[var(--accent)] font-semibold">+{skill.year}y</span>
          </div>
        ))}
      </div>
    </section>
  </div>
</Layout>
