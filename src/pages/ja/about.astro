---
import Layout from '../../layouts/Layout.astro';
import { getData } from '../../data/about.ja';

const data = getData('ja');
---

<Layout title="アバウト - 日髙悠太">
  <div class="space-y-8">
    <!-- Page Header -->
    <header class="glass-card p-8 text-center">
      <h1 class="text-3xl md:text-4xl font-bold text-[var(--text-primary)] mb-2">
        About
      </h1>
      <p class="text-[var(--text-muted)]">
        スキル・学歴・モチベーション
      </p>
    </header>
    
    <!-- Education -->
    <section class="glass-card p-6 md:p-8 animate-fade-in">
      <h2 class="section-title">Education</h2>
      {data.education && data.education.map((edu) => (
        <div class="border-l-2 border-[var(--accent)] pl-6 py-4">
          <div class="flex flex-wrap items-center gap-2 text-sm text-[var(--text-muted)] font-mono mb-2">
            <span>{edu.startDate}</span>
            <span>→</span>
            <span>{edu.endDate}</span>
          </div>
          <h3 class="text-xl font-semibold text-[var(--text-primary)] mb-1">
            {edu.institution}
          </h3>
          <p class="text-[var(--accent)] mb-3">{edu.degree}</p>
          <p class="text-[var(--text-secondary)] leading-relaxed">
            {edu.description}
          </p>
        </div>
      ))}
    </section>
    
    <!-- Motivation -->
    <section class="glass-card p-6 md:p-8 animate-fade-in delay-100">
      <h2 class="section-title">Motivation</h2>
      <div class="grid gap-6">
        {data.motivation && data.motivation.map((item, i) => (
          <div class="group p-4 rounded-lg bg-[var(--glass-bg)] border border-[var(--glass-border)] hover:border-[var(--accent)] transition-all duration-300">
            <h3 class="text-lg font-semibold text-[var(--accent)] mb-2 flex items-center gap-2">
              <span class="text-[var(--text-muted)]">0{i + 1}.</span>
              {item.title}
            </h3>
            <p class="text-[var(--text-secondary)] leading-relaxed">
              {item.desc}
            </p>
          </div>
        ))}
      </div>
    </section>
    
    <!-- Projects -->
    <section class="glass-card p-6 md:p-8 animate-fade-in delay-200">
      <h2 class="section-title">Personal Projects</h2>
      <div class="grid md:grid-cols-2 gap-4">
        {data.selfProject && data.selfProject.map((project) => (
          <a 
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class="group p-4 rounded-lg bg-[var(--glass-bg)] border border-[var(--glass-border)] hover:border-[var(--accent)] transition-all duration-300 block"
          >
            <h3 class="text-lg font-semibold text-[var(--text-primary)] group-hover:text-[var(--accent)] transition-colors mb-2 flex items-center gap-2">
              {project.title}
              <span class="text-xs opacity-0 group-hover:opacity-100 transition-opacity">↗</span>
            </h3>
            <p class="text-sm text-[var(--text-muted)] line-clamp-2">
              {project.desc}
            </p>
          </a>
        ))}
      </div>
    </section>
    
    <!-- Language Skills -->
    <section class="glass-card p-6 md:p-8 animate-fade-in delay-300">
      <h2 class="section-title">Languages</h2>
      <div class="flex flex-wrap gap-3">
        {data.skills?.LanguageSkills.map((skill) => (
          <div class="tag">
            <span class="font-medium">{skill.name}</span>
            <span class="mx-2 text-[var(--glass-border)]">|</span>
            <span class="text-[var(--text-muted)]">{skill.description}</span>
          </div>
        ))}
      </div>
    </section>
    
    <!-- Programming Skills -->
    <section class="glass-card p-6 md:p-8 animate-fade-in delay-400">
      <h2 class="section-title">Technical Skills</h2>
      <div class="flex flex-wrap gap-2">
        {data.skills?.ProgrammingSkills.map((skill) => (
          <div class="tag group cursor-default">
            <span class="font-medium text-[var(--text-primary)]">{skill.name}</span>
            {skill.description && (
              <>
                <span class="mx-1.5 text-[var(--glass-border)]">·</span>
                <span class="text-[var(--text-muted)] text-xs">{skill.description}</span>
              </>
            )}
            <span class="ml-2 text-xs text-[var(--accent)]">+{skill.year}y</span>
          </div>
        ))}
      </div>
    </section>
  </div>
</Layout>
