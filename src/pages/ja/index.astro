---
import Layout from '../../layouts/Layout.astro';
import { getData } from '../../data/about.ja';

const data = getData('ja');
---

<Layout>
  <div class="min-h-[85vh] flex flex-col justify-center py-12">
    <!-- Hero Section -->
    <section class="grid md:grid-cols-2 gap-12 items-center mb-20">
      <!-- Profile Image -->
      <div class="flex justify-center md:justify-end order-1 md:order-none animate-fade-in">
        <div class="relative group">
          <div class="absolute -inset-2 bg-gradient-to-r from-[var(--accent)] via-[var(--accent-light)] to-[var(--accent-dim)] rounded-3xl blur-2xl opacity-40 group-hover:opacity-60 transition-opacity duration-700"></div>
          <div class="absolute inset-0 bg-gradient-to-br from-[var(--accent)]/20 to-transparent rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <img
            class="relative rounded-3xl w-72 h-72 md:w-96 md:h-96 object-cover border-2 border-[var(--glass-border)] group-hover:border-[var(--accent)] transition-all duration-500 shadow-2xl"
            src="/me.jpeg"
            alt={`${data.family_name} ${data.given_name}`}
            width="384"
            height="384"
            loading="eager"
          />
        </div>
      </div>
      
      <!-- Profile Info -->
      <div class="glass-card p-10 space-y-8 animate-fade-in delay-100">
        <div class="space-y-3">
          <p class="text-[var(--text-muted)] text-xs font-mono tracking-wider uppercase">$ whoami</p>
          <h1 class="text-5xl md:text-6xl font-extrabold text-[var(--text-primary)] leading-tight tracking-tight">
            {data.family_name} <span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-light)] bg-clip-text text-transparent">
              {data.given_name}
            </span>
          </h1>
        </div>
        
        <div class="space-y-3">
          <p class="text-[var(--text-muted)] text-xs font-mono tracking-wider uppercase">$ profession</p>
          <p class="text-2xl md:text-3xl text-[var(--accent)] font-bold">
            {data.profession}
          </p>
        </div>
        
        <div class="space-y-3">
          <p class="text-[var(--text-muted)] text-xs font-mono tracking-wider uppercase">$ cat bio.txt</p>
          <p class="text-[var(--text-secondary)] leading-relaxed text-lg">
            {data.bio}
          </p>
        </div>
        
        <!-- Social Links -->
        {data.social && (
          <div class="pt-6 border-t border-[var(--glass-border)]">
            <p class="text-[var(--text-muted)] text-xs font-mono tracking-wider uppercase mb-4">$ connect</p>
            <div class="flex flex-wrap gap-3">
              {data.social.map((social) => (
                <a 
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="tag"
                >
                  {social.name}
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </section>
    
    <!-- Quick Stats -->
    <section class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <div class="glass-card p-8 text-center group animate-fade-in delay-200 hover:scale-105 transition-transform duration-300">
        <p class="text-5xl font-extrabold text-[var(--accent)] mb-2 bg-gradient-to-br from-[var(--accent)] to-[var(--accent-light)] bg-clip-text text-transparent">6+</p>
        <p class="text-sm text-[var(--text-muted)] font-medium uppercase tracking-wider">Years Experience</p>
      </div>
      <div class="glass-card p-8 text-center group animate-fade-in delay-300 hover:scale-105 transition-transform duration-300">
        <p class="text-5xl font-extrabold text-[var(--accent)] mb-2 bg-gradient-to-br from-[var(--accent)] to-[var(--accent-light)] bg-clip-text text-transparent">15+</p>
        <p class="text-sm text-[var(--text-muted)] font-medium uppercase tracking-wider">Projects</p>
      </div>
      <div class="glass-card p-8 text-center group animate-fade-in delay-400 hover:scale-105 transition-transform duration-300">
        <p class="text-5xl font-extrabold text-[var(--accent)] mb-2 bg-gradient-to-br from-[var(--accent)] to-[var(--accent-light)] bg-clip-text text-transparent">10+</p>
        <p class="text-sm text-[var(--text-muted)] font-medium uppercase tracking-wider">Technologies</p>
      </div>
      <div class="glass-card p-8 text-center group animate-fade-in delay-500 hover:scale-105 transition-transform duration-300">
        <p class="text-5xl font-extrabold text-[var(--accent)] mb-2 bg-gradient-to-br from-[var(--accent)] to-[var(--accent-light)] bg-clip-text text-transparent">2</p>
        <p class="text-sm text-[var(--text-muted)] font-medium uppercase tracking-wider">Languages</p>
      </div>
    </section>
  </div>
</Layout>
