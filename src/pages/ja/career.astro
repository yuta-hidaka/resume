---
import Layout from '../../layouts/Layout.astro';
import HistoryCard from '../../components/HistoryCard.astro';
import { getData } from '../../data/about.ja';

const data = getData('ja');
---

<Layout title="キャリア - 日髙悠太">
  <div class="space-y-10">
    <!-- Page Header -->
    <header class="glass-card p-10 text-center animate-fade-in opacity-0">
      <h1 class="text-4xl md:text-5xl font-extrabold text-[var(--text-primary)] mb-3 tracking-tight">
        Career
      </h1>
      <p class="text-[var(--text-muted)] text-lg">
        キャリアの歩み・職務経歴
      </p>
    </header>
    
    <!-- Timeline -->
    <section class="relative">
      {data.experience && data.experience.map((exp, i) => (
        <div class="animate-fade-in opacity-0" style={`animation-delay: ${(i + 1) * 100}ms;`}>
          <HistoryCard
            company={exp.company}
            startDate={exp.startDate}
            endDate={exp.endDate}
            jobTitle={exp.jobTitle}
            job={exp.projects.job}
            jobDescription={exp.projects.jobDescription}
            tags={exp.projects.tags || []}
            index={i}
            locale="ja"
          />
        </div>
      ))}
    </section>
  </div>
</Layout>
