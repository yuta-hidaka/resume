---
import Layout from '../../layouts/Layout.astro';
import { getData } from '../../data/about.ja';
const { locale } = Astro.params;
const data = getData(locale);
export async function getStaticPaths() {
  return [
    { params: { locale: 'en' } },
    { params: { locale: 'ja' } }
  ];
}
---
<Layout locale={locale}>
  <h1 class="text-2xl h-full w-full px-10 mt-5">Home</h1>
  <main class="h-full w-full md:flex flex-none p-5 md:p-10">
    <div class="md:m-0 m-auto md:w-1/3 w-full">
      <img class="rounded-lg hue-rotate-15 m-auto md:m-0" src="/me.jpeg" alt="Picture of the author" width="300" height="300" />
    </div>
    <div class="ml-0 mt-5 md:mt-0 md:ml-5 md:w-2/3 w-full p-3 rounded-lg border-green-600 border">
      <p class="block">{data.family_name} {data.given_name}</p>
      <p class="block">{data.profession}</p>
      <p class="block whitespace-pre-wrap">{data.bio}</p>
    </div>
  </main>
</Layout>
