    color: var(--accent);
    background: transparent;
    font-weight: 600;
  }
  
  .nav-item-active:hover {
    color: var(--accent-light);
    background: transparent;
    transform: translateY(-1px);
  }
  
  /* Action Buttons - Enhanced Glass Design */
  .action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 12px;
    background: transparent;
    border: 0.5px solid transparent;
