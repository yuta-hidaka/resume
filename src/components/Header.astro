    border: 0.5px solid rgba(255, 255, 255, 0.25);
    box-shadow: 
      0 2px 8px rgba(0, 0, 0, 0.1),
      0 0 0 0.5px rgba(255, 255, 255, 0.1) inset;
    isolation: isolate;
    position: relative;
    overflow: hidden;
  }
  
  .nav-list::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.3) 50%,
      transparent 100%
    );
    pointer-events: none;
  }
  
  :global(.light) .nav-list {
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.7) 0%,
      rgba(255, 255, 255, 0.6) 100%
    );
    border-color: rgba(0, 0, 0, 0.1);
    box-shadow: 
      0 2px 8px rgba(0, 0, 0, 0.06),
      0 0 0 0.5px rgba(255, 255, 255, 0.8) inset;
  }
  
  :global(.light) .nav-list::before {
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(0, 0, 0, 0.05) 50%,
      transparent 100%
    );
  }
  
  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
  }
  
  /* Mobile Menu */
  .mobile-menu {
    display: none;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s cubic-bezier(0.16, 1, 0.3, 1), opacity 0.3s ease;
    opacity: 0;
  }
  
  .mobile-menu-open {
    display: block;
    max-height: 500px;
    opacity: 1;
    margin-top: 8px;
    padding-bottom: 8px;
  }
  
  .mobile-nav-list {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 8px;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.15) 0%,
      rgba(255, 255, 255, 0.10) 100%
    );
    backdrop-filter: blur(60px) saturate(200%);
    -webkit-backdrop-filter: blur(60px) saturate(200%);
    border-radius: 14px;
    border: 0.5px solid rgba(255, 255, 255, 0.25);
    box-shadow: 
      0 4px 16px rgba(0, 0, 0, 0.15),
      0 0 0 0.5px rgba(255, 255, 255, 0.1) inset;
    isolation: isolate;
    position: relative;
    overflow: hidden;
  }
  
  .mobile-nav-list::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.3) 50%,
      transparent 100%
    );
    pointer-events: none;
  }
  
  :global(.light) .mobile-nav-list {
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.7) 0%,
      rgba(255, 255, 255, 0.6) 100%
    );
    border-color: rgba(0, 0, 0, 0.1);
    box-shadow: 
      0 4px 16px rgba(0, 0, 0, 0.08),
      0 0 0 0.5px rgba(255, 255, 255, 0.8) inset;
  }
  
  :global(.light) .mobile-nav-list::before {
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(0, 0, 0, 0.05) 50%,
      transparent 100%
    );
  }
  
  .mobile-nav-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    font-size: 14px;
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    border-radius: 10px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    letter-spacing: -0.01em;
    background: transparent;
  }
  
  .mobile-nav-item:hover {
    color: var(--text-primary);
  }
  
  .mobile-nav-item-active {
    color: var(--accent);
    background: transparent;
    font-weight: 600;
  }
  
  .mobile-nav-item-active:hover {
    color: var(--accent-light);
    background: transparent;
  }
  
  .mobile-nav-icon {
    font-size: 18px;
    width: 24px;
    text-align: center;
  }
  
  .mobile-nav-text {
    flex: 1;
  }
  
  /* Navigation Items - No Background */
  .nav-item {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 8px 16px;
    font-size: 14px;
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    border-radius: 10px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
