---
import { getLangFromUrl, getRouteFromUrl, useTranslations, getLocalizedPath, languages, type Lang } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const route = getRouteFromUrl(Astro.url);
const t = useTranslations(lang);

const links = [
  { label: t('nav.home'), path: '/', icon: '⌂' },
  { label: t('nav.career'), path: '/career', icon: '◈' },
  { label: t('nav.about'), path: '/about', icon: '◉' },
  { label: t('nav.downloads'), path: '/downloads', icon: '↓' },
];

const otherLang: Lang = lang === 'ja' ? 'en' : 'ja';
const langSwitchPath = `/${otherLang}${route ? '/' + route : ''}`;

const currentPath = Astro.url.pathname;
---

<header class="header-glass sticky top-0 z-50">
  <nav class="max-w-4xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-14">
      <!-- Logo / Name -->
      <a href={getLocalizedPath(lang, '/')} class="logo-link flex items-center gap-2">
        <span class="logo-icon">Y</span>
        <span class="logo-text hidden sm:block">Yuta Hidaka</span>
      </a>
      
      <!-- Navigation Links -->
      <ul class="nav-list">
        {links.map((link) => {
          const href = getLocalizedPath(lang, link.path);
          const isActive = currentPath === href || currentPath === href + '/';
          return (
            <li>
              <a 
                href={href}
                class:list={[
                  'nav-item',
                  isActive && 'nav-item-active'
                ]}
              >
                <span class="nav-item-text">{link.label}</span>
              </a>
            </li>
          );
        })}
      </ul>
      
      <!-- Actions -->
      <div class="flex items-center gap-2">
        <!-- Language Switcher -->
        <a 
          href={langSwitchPath}
          class="action-btn"
          title={languages[otherLang]}
        >
          <svg class="action-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="12" cy="12" r="10"/>
            <path d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
          </svg>
        </a>
        
        <!-- Theme Toggle -->
        <button 
          id="theme-toggle"
          class="action-btn"
          aria-label="Toggle theme"
        >
          <svg id="theme-icon-sun" class="action-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="12" cy="12" r="4"/>
            <path d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41"/>
          </svg>
          <svg id="theme-icon-moon" class="action-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" style="display: none;">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>

<script is:inline>
  // Theme toggle functionality
  (function() {
    const themeToggle = document.getElementById('theme-toggle');
    const html = document.documentElement;
    
    const updateIcons = (theme) => {
      const sunIcon = document.getElementById('theme-icon-sun');
      const moonIcon = document.getElementById('theme-icon-moon');
      if (sunIcon && moonIcon) {
        if (theme === 'dark') {
          sunIcon.style.display = 'block';
          moonIcon.style.display = 'none';
        } else {
          sunIcon.style.display = 'none';
          moonIcon.style.display = 'block';
        }
      }
    };
    
    const setTheme = (theme) => {
      if (theme === 'light') {
        html.classList.add('light');
        html.classList.remove('dark');
      } else {
        html.classList.add('dark');
        html.classList.remove('light');
      }
      localStorage.setItem('theme', theme);
      updateIcons(theme);
    };
    
    // Initialize icons based on current theme
    const currentTheme = html.classList.contains('light') ? 'light' : 'dark';
    updateIcons(currentTheme);
    
    // Toggle theme on button click
    if (themeToggle) {
      themeToggle.addEventListener('click', () => {
        const current = html.classList.contains('light') ? 'light' : 'dark';
        setTheme(current === 'dark' ? 'light' : 'dark');
      });
    }
  })();
</script>

<style>
  /* Premium Glass Header - True Apple Frosted Glass Design */
  .header-glass {
    background: var(--glass-bg-solid);
    backdrop-filter: blur(var(--blur-amount)) saturate(var(--saturate-amount));
    -webkit-backdrop-filter: blur(var(--blur-amount)) saturate(var(--saturate-amount));
    border-bottom: 0.5px solid var(--glass-border);
    box-shadow: 0 1px 0 rgba(0, 0, 0, 0.1);
    isolation: isolate;
  }
  
  :global(.light) .header-glass {
    background: var(--glass-bg-solid);
    border-bottom-color: var(--glass-border);
    box-shadow: 0 1px 0 rgba(0, 0, 0, 0.05);
  }
  
  /* Logo */
  .logo-link {
    text-decoration: none;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .logo-link:hover {
    transform: translateY(-1px);
  }
  
  .logo-icon {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dim) 100%);
    color: white;
    font-weight: 800;
    font-size: 16px;
    border-radius: 10px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 4px 12px rgba(0, 217, 165, 0.3);
  }
  
  .logo-link:hover .logo-icon {
    transform: scale(1.08) rotate(5deg);
    box-shadow: 0 8px 24px rgba(0, 217, 165, 0.5);
  }
  
  .logo-text {
    font-weight: 700;
    font-size: 16px;
    color: var(--text-primary);
    letter-spacing: -0.03em;
  }
  
  /* Navigation List */
  .nav-list {
    display: flex;
    align-items: center;
    gap: 2px;
    padding: 4px;
    background: var(--glass-bg);
    backdrop-filter: blur(40px) saturate(var(--saturate-amount));
    -webkit-backdrop-filter: blur(40px) saturate(var(--saturate-amount));
    border-radius: 12px;
    border: 0.5px solid var(--glass-border);
    isolation: isolate;
  }
  
  :global(.light) .nav-list {
    background: var(--glass-bg);
    border-color: var(--glass-border);
  }
  
  /* Navigation Items */
  .nav-item {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 8px 16px;
    font-size: 14px;
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    border-radius: 10px;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    letter-spacing: -0.01em;
  }
  
  .nav-item:hover {
    color: var(--text-primary);
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-1px);
  }
  
  :global(.light) .nav-item:hover {
    background: rgba(0, 0, 0, 0.06);
  }
  
  .nav-item-text {
    position: relative;
    z-index: 1;
  }
  
  /* Active state with gradient background */
  .nav-item-active {
    color: white;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dim) 100%);
    font-weight: 600;
    box-shadow: 0 4px 12px rgba(0, 217, 165, 0.3);
  }
  
  .nav-item-active:hover {
    background: linear-gradient(135deg, var(--accent-light) 0%, var(--accent) 100%);
    color: white;
    transform: translateY(-1px);
    box-shadow: 0 6px 16px rgba(0, 217, 165, 0.4);
  }
  
  :global(.light) .nav-item-active,
  :global(.light) .nav-item-active:hover {
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dim) 100%);
    color: white;
  }
  
  /* Action Buttons */
  .action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 12px;
    background: transparent;
    border: 1px solid transparent;
    cursor: pointer;
    color: var(--text-secondary);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .action-btn:hover {
    color: var(--text-primary);
    background: var(--glass-bg);
    backdrop-filter: blur(40px) saturate(var(--saturate-amount));
    -webkit-backdrop-filter: blur(40px) saturate(var(--saturate-amount));
    border-color: var(--glass-border);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  :global(.light) .action-btn:hover {
    background: var(--glass-bg);
    backdrop-filter: blur(40px) saturate(var(--saturate-amount));
    -webkit-backdrop-filter: blur(40px) saturate(var(--saturate-amount));
    border-color: var(--glass-border);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }
  
  .action-btn:active {
    transform: translateY(0) scale(0.96);
  }
  
  .action-icon {
    width: 20px;
    height: 20px;
    stroke-width: 2;
  }
  
  /* Responsive */
  @media (max-width: 640px) {
    .nav-item {
      padding: 6px 12px;
      font-size: 13px;
    }
    
    .logo-text {
      display: none;
    }
    
    .action-btn {
      width: 36px;
      height: 36px;
    }
  }
</style>
