---
import '../styles/global.css';
import Header from '../components/Header.astro';
import { getLangFromUrl } from '../i18n/utils';

interface Props {
  title?: string;
  description?: string;
}

const { title = '日髙悠太 - Yuta Hidaka - Portfolio', description = 'Software Engineer - 日髙悠太のポートフォリオサイトです' } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="author" content="Yuta Hidaka" />
    <meta name="keywords" content="resume software engineer portfolio" />
    
    <!-- Open Graph / Twitter -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/me.jpeg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@yuta-hidaka" />
    <meta name="twitter:creator" content="@yuta-hidaka" />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Prevent flash of wrong theme -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') || 
          (window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark');
        document.documentElement.classList.add(theme);
      })();
    </script>
  </head>
  <body class="min-h-screen">
    <!-- Background Glow Effects -->
    <div class="glow-orb glow-orb-1"></div>
    <div class="glow-orb glow-orb-2"></div>
    
    <Header />
    
    <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 pb-8 animate-fade-in">
      <slot />
    </main>
    
    <!-- Footer -->
    <footer class="glass-nav mt-auto py-6">
      <div class="max-w-5xl mx-auto px-4 text-center text-sm text-[var(--text-muted)]">
        <p>&copy; {new Date().getFullYear()} Yuta Hidaka. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
